@model TestMVC.Models.ProductDTO.Root;

<script type="text/javascript">

</script>
@{

}


<div class="container">

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src='@Url.Content("~/Content/images/product1.jpg")' class="d-block w-100" alt="first Cover">
            </div>
            <div class="carousel-item">
                <img src='@Url.Content("~/Content/images/product2.jpg")' class="d-block w-100" alt="second Cover">
            </div>
            <div class="carousel-item">
                <img src='@Url.Content("~/Content/images/product3.jpg")' class="d-block w-100" alt="third Cover">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="row">
        @foreach (var element in Model.products ?? new List<TestMVC.Models.ProductDTO.Product>())
        {
            <div class="col-12 col-md-6 col-lg-4" style="margin-top: 12px;">
                <div class="card" style="width: 18rem;">
                    <img src="@Html.Raw(element.thumbnail)" alt="a description of the image"
                        style="width: 100%;height: 250px;object-fit: scale-down;">
                    <div class="card-body">
                        <h5 class="card-title text-overflow-clamp-1-line">@element.title</h5>
                        <p class="card-text text-overflow-clamp-2-line">@element.description</p>
                        <div class="d-flex justify-content-between">
                            <div>
                                <i class="fas fa-money-check-alt"></i>
                                <span class="fw-bold">@string.Format("{0:0,0}", element.price) </span>
                            </div>
                            <a class="btn btn-primary" href="@Url.Action("Detail", "Product", new { id = element.id})">รายละเอียดสินค้า</a>
                        </div>

                    </div>
                </div>
            </div>

        }
    </div>
</div>